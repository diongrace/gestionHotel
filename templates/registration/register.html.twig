  <link rel="stylesheet" href="{{asset('/admin/assets/dist/css/adminlte.min.css')}}">
</head>
<body class="hold-transition register-page">
<div class="register-box">
  <div class="register-logo">
    cree un compte a DSOGA Residence
  </div>
  <div class="card">
    <div class="card-body register-card-body">
      <p class="login-box-msg"></p>
{{ form_start(registrationForm) }}
    {{ form_errors(registrationForm) }}
      {# <form method="post"> #}
        <div class="input-group mb-10">
           <label class="form-label fs-6 fw-bolder text-dark"></label>
           {{ form_row(registrationForm.nom, {attr:{'class':'form-control form-control-lg form-control-solid','autocomplete':'off'}})
           }}
        </div>
         <div class="input-group mb-10">
          <label class="form-label fs-6 fw-bolder text-dark"></label>
          {{ form_row(registrationForm.prenoms, {attr:{'class':'form-control form-control-lg form-control-solid','autocomplete':'off'}})
           }}
        </div>
         <div class="input-group mb-3">
           <label class="form-label fs-6 fw-bolder text-dark"></label>
          {{ form_row(registrationForm.numero, {attr:{'class':'form-control form-control-lg form-control-solid','autocomplete':'off'}})
           }}
        </div>
        <div class="input-group mb-3">
          <label class="form-label fs-6 fw-bolder text-dark"></label>
         {{ form_row(registrationForm.email, {attr:{'class':'form-control form-control-lg form-control-solid','autocomplete':'off'}})
           }}
        </div>
        <div class="input-group mb-3">
          <label class="form-label fs-6 fw-bolder text-dark"></label>
         {{ form_row(registrationForm.plainPassword, {attr:{'class':'form-control form-control-lg form-control-solid','autocomplete':'off'}})
           }}
        </div>
          <div class="fv-row mb-10">
        <label class="form-check form-check-custom form-check-solid form-check-inline">
        {{ form_row(registrationForm.agreeTerms, {attr:{'class':'form-check-input','name':'toc', 'value':1}})
            }}
            <span class="form-check-label fw-bold text-gray-700 fs-6">J'accepte
                <a href="#" class="ms-1 link-primary">Termes et conditions</a>.</span>
        </label>
    </div
        {# 00
          <div class="col-8">
            <div class="icheck-primary">
              <input type="checkbox" id="agreeTerms" name="terms" value="agree">
              <label for="agreeTerms">
               I agree to the <a href="#">terms</a>
              </label>
            </div>
          </div> #}
          <!-- /.col -->
          <div class="col-4">
            <button type="submit" class="btn btn-primary btn-block">Register</button>
          </div>
          <!-- /.col -->
        </div>
      {# </form> #}
{{ form_end(registrationForm) }}
      {# <div class="social-auth-links text-center">
